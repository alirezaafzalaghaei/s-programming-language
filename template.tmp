from goto import with_goto
from collections import defaultdict

X, Y, Z, show_snapshot = [None] * 4

def delete_last_lines(n):
    CURSOR_UP_ONE = '\x1b[1A'
    ERASE_LINE = '\x1b[2K'
    for _ in range(n):
        sys.stdout.write(CURSOR_UP_ONE)
        sys.stdout.write(ERASE_LINE)

def init_snapshot():
    init = list()
    init.append('| i')
    for i in range(len(X)):
        init.append("X%d" % (i + 1))
    for i in range(len(Z)):
        init.append("Z%d" % (i + 1))
    init.append(' Y')
    init = ' | '.join(init)
    print(init + ' |')
    print('|', '-' * (len(init)), '|', sep='')


def snapshot(i):
    global X, Y, Z
    init = list()

    init.append('|{:^2}'.format(i))
    for i in range(len(X)):
        init.append('{:^2}'.format(X[i]))
    for i in range(len(Z)):
        init.append('{:^2}'.format(Z[i]))
    init.append('{:^2}'.format(Y))
    init = ' | '.join(init)

    print(init + ' |')


@with_goto
def main():
    global X, Y, Z, show_snapshot
    Y = 0
    ### code ###

try:
    print("\nProgram output is : ", main())
except IndexError:
    try:
        if show_snapshot:
            delete_last_lines(4)
    except:
        pass
    finally:
        print("Not enough inputs")
except KeyboardInterrupt:
    print("Executation cancelled by user")
except:
    print("Unknown error! please open an issue in github project page")
